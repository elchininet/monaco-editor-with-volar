{
    "compilerOptions": {
      "outDir": "./dist/",
      "module": "esnext",
      "target": "ES5",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": false,
      "noImplicitAny": true,
      "removeComments": true,
      "baseUrl": "./src",
    },
    "include": ["src/**/*.ts"]
  }